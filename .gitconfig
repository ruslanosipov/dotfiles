[color]
	ui = true
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[core]
	editor = vim
	autocrlf = false
[alias]
	st = status
	cm = commit -m
	p = push
	pr = pull --rebase
	sh = stash
	sp = stash pop
	sa = stash apply
	d = difftool
	cp = cherry-pick
	show-files = "!f() { git diff-tree --no-commit-id --name-only -r $1; }; f"
[merge]
	tool = vimdiff
[mergetool]
	prompt = false
[include]
	path = ~/.gitconfig.local
